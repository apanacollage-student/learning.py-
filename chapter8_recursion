'''FAHRENHEIT TO CELSIUS'''
def fc(f):
    return 5 * (f - 32) / 9

f = float(input("Enter temperature in Fahrenheit: "))
print(f"Temperature in Celsius: {fc(f)}")


################ factorial##############
def factorial(n):
    if(n==1 or n==0):
        return 1
    return n*factorial(n-1)
a=int(input("enter your number:"))
print("the factorial of number is:",factorial(a))

########## find gratest of threee number in fun#######

def gratest(a,b,c):
    if(a>b and a>c):
        return "a"
    elif(b>a and b>c):
        return "b"
    elif(c>a and c>b):
        return "c"

a=int(input("enter your number:"))
b=int(input("enter your number:"))
c=int(input("enter your number:"))
print("gratest:",gratest(a,b,c))

